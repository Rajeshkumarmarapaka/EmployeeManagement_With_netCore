<!-- Details view with Bootsrap-->
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card-header">
            <h1>@Model.Employee.Name</h1>
        </div>
        <div class="card-body text-center imagethumbnail">
            <img src="@photopath" asp-append-version="true" />
                <h6>EmployeeID:@Model.Employee.Id</h6>
                <h6>Email:@Model.Employee.Email</h6>
                <h6>Department:@Model.Employee.Department</h6>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
            <a asp-action="Edit"asp-controller="Home"
               asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

